<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".description">
    <RelativeLayout
        android:id="@+id/descriptionrootlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/descriptiontext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

       <Button
           android:layout_below="@+id/descriptiontext"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/editbutton"
           android:text="EDIT"/>

        <ImageView
            android:clickable="true"
            android:id="@+id/savetomailimage"
            android:layout_below="@+id/editbutton"
            android:elevation="50dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/savetomailimage"
            android:focusable="true" />
        <ImageView
            android:onClick="feedback"
            android:clickable="true"
            android:id="@+id/feedbackimage"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/editbutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/feedbackimage"
            android:layout_toRightOf="@+id/savetomailimage"
            android:focusable="true" />



    </RelativeLayout>

</ScrollView>